.labels
  display flex
  align-items center
  justify-content center

  img
    max-width 130
    height auto
    margin-left 20
    opacity 0
    transform scale(0)
    transition all .46s cubic-bezier(.75, -.5, 0, 1.75)

    &:nth-child(1)
      transition-delay .1s

    &:nth-child(2)
      transition-delay .2s

    &:nth-child(3)
      transition-delay .3s

    &:nth-child(4)
      transition-delay .35s

.active
  .labels img
    opacity 1
    transform scale(1)

  &.beforeEnd
    .labels img
      opacity 0
      transform scale(0)